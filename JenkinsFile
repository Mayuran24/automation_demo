pipeline {
    agent any

    tools {
        maven 'maven-3.9.6'
        jdk 'jdk17'
    }

    options {
        timestamps()
        ansiColor('xterm')
    }

    parameters {
        choice(name: 'Suite', choices: ['smoke.xml', 'regression.xml'], description: 'Select the test suite to run')
    }

    stages {

        stage('Checkout') {
                    steps {
                        git url: 'https://github.com/Mayuran24/automation_demo.git', branch: 'main'
                    }
                }

        stage('Build & Test') {
            steps {
                // Run tests, continue to next stage even if some fail
//                 bat 'mvn clean test -Pchrome verify'
                sh "${MAVEN_HOME}/bin/mvn clean test -DsuiteXmlFile=${params.Suite}"
            }
        }

        stage('Allure Report') {
            steps {
                // Generate Allure report
                allure([
                    includeProperties: false,
                    jdk: "",
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: "target/allure-results"]]
                ])
            }
        }
    }

    post {
        always {
            // Publish test results to Jenkins
            junit '**/target/surefire-reports/*.xml'

            // Mark unstable if tests failed but pipeline continued
            script {
                if (currentBuild.result == null) {
                    currentBuild.result = 'UNSTABLE'
                }
            }

            echo "Build finished!"
        }
        success {
            echo "Build succeeded!"
        }
        failure {
            echo "Build failed!"
        }
    }
}
